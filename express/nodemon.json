{
  "restartable": "rs",
  "ignore": [".git", "node_modules/", "dist/", "coverage/"],
  "watch": ["src", ".env", "."],
  "ext": "js,json,ts",
  "execMap": {
    "ts": "node -r ts-node/register"
  },
  "env": {
    "NODE_ENV": "development"
  },
  "exec": "ts-node -r tsconfig-paths/register --transpile-only app.ts"
}
